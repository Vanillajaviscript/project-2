<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs")%>
<body>
    <%- include("./partials/nav.ejs")%>

    <div class="show">
        <h2><%=blog.title%></h2>
        <h3><%= blog.snippet %> </h3>
        <div class="content">
            <p><%=blog.body%></p>
        </div>
        <div class="edit-btn">
            <a href="/blogs/<%=blog.id%>/edit"><button>Edit</button></a>
        </div>
        <form class="delete-btn" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
        </form>
        
    </div>
    <a class="return-btn" href="/blogs"><button>Return</button></a>
    <%- include("./partials/footer.ejs")%>
</body>
</html>